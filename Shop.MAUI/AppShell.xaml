<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Shop.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Shop.MAUI"
    xmlns:views="clr-namespace:Shop.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Shop.MAUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate views:InventoryView}"
        Route="InventoryPage" />
    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate views:ShopView}"
        Route="ShopPage" />
    <ShellContent
        Title="Add Product"
        ContentTemplate="{DataTemplate views:AddProductView}"
        Route="AddProductPage" />

</Shell>
