<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shop.MAUI.Views.AddProductView"
             Title="AddProductView">
    <VerticalStackLayout>

        <Entry Placeholder="Name"/>
        <Entry Placeholder="Description"/>
        <Entry Placeholder="Price"/>
        <Entry Placeholder="Quantity"/>

        <Button Text="Add" Clicked="AddProduct"/>
        <Button Text="Back" Clicked="GoToInventoryPage"/>

    </VerticalStackLayout>
</ContentPage>