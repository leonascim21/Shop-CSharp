<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shop.MAUI.MainPage">

    <ScrollView>
        <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"  BackgroundColor="#F5F2B4">
            <VerticalStackLayout
                VerticalOptions="Center"
                Padding="30,0"
                Spacing="25">

                <Label Text="Home"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"
                       FontSize="30"
                       TextColor="#605F4F"/>

                <Button Text="Shop" 
                        MaximumWidthRequest="600"
                        BackgroundColor="#69C7B8"
                        TextColor="#605F4F"/>
            
                <Button Text="Manage Inventory" 
                        Clicked="GoToInventoryPage"  
                        MaximumWidthRequest="600" 
                        BackgroundColor="#69C7B8"
                        TextColor="#605F4F"/>
                
                </VerticalStackLayout>
            </Grid>
    </ScrollView>

</ContentPage>
